OPEN_WEATHER_ENABLED=true
OPEN_WEATHER_LANGUAGE="ru" # Changes the language of certain elements like weather descriptions
OPEN_WEATHER_API_KEY=""

# IMPORTANT!!! you dont wanna fuck this UP!!! (UK users only.)
